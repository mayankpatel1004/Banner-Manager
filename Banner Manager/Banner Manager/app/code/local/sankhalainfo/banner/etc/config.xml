<?xml version="1.0"?>
<config>
    <modules>
        <Sankhalainfo_Banner>
            <version>0.1.0</version>
        </Sankhalainfo_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Sankhalainfo_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<banner>
				<use>admin</use>
				<args>
					<module>Sankhalainfo_Banner</module>
					<frontName>banner</frontName>
				</args>
			</banner>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<banner module="banner">
				<title>Angelsincrib</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="banner">
						<title>Manage Banners</title>
						<sort_order>1</sort_order>
						<action>banner/adminhtml_banner</action>
					</items>
				</children>
			</banner>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Sankhalainfo_Banner>
							<title>Banner Module</title>
							<sort_order>10</sort_order>
						</Sankhalainfo_Banner>
						<system>
                            <children>
                                <config>
                                    <children>
                                        <banner>
                                            <title>Custom Configuration</title>
                                        </banner>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<banner>
					<file>banner.xml</file>
				</banner>
			</updates>
		</layout>
    </adminhtml>   
    <global>
		<page>
            <layouts>
				<homepage module="page" translate="label">
                    <label>Home Page</label>
                    <template>page/home.phtml</template>
                    <layout_handle>page_homepage</layout_handle>
                </homepage>
			</layouts>
		</page>
        <models>
            <banner>
                <class>Sankhalainfo_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>			
            <banner_mysql4>
                <class>Sankhalainfo_Banner_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>banner</table>
                    </banner>
                </entities>
            </banner_mysql4>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Sankhalainfo_Banner</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
        <blocks>
            <banner>
                <class>Sankhalainfo_Banner_Block</class>
            </banner>			
        </blocks>
        <helpers>
            <banner>
                <class>Sankhalainfo_Banner_Helper</class>
            </banner>			
        </helpers>
		<page>
            <layouts>
				<homepage module="page" translate="label">
                    <label>Home Page</label>
                    <template>page/home.phtml</template>
                    <layout_handle>page_homepage</layout_handle>
                </homepage>
				<homeright module="page" translate="label">
                    <label>Home Right Column Page</label>
                    <template>page/home-right.phtml</template>
                    <layout_handle>page_homeright</layout_handle>
                </homeright>
			</layouts>
		</page>
    </global>
</config>